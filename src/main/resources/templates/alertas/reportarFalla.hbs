{{#partial "contenido"}}
<div class="rectangulo-puntos-personalizado">
    <div class="stats-puntos-container">
        <div class="heladeras-lista">
            <div>
                <h2>{{heladera.nombre}}</h2>
                <form method="POST" action="/falla">
                    <div class="form-group">
                        <label for="mensaje">Mensaje:</label>
                        <textarea id="mensaje" name="mensaje" rows="4" cols="50"></textarea>
                    </div>
                    <input type="hidden" name="idHeladera" value="{{heladera.id}}" required/>
                    <div class="form-group">
                        <label for="tipoFalla">Tipo de Falla:</label>
                        <select id="tipoFalla" name="tipoFalla">
                            <option value="desperfecto">DESPERFECTO</option>
                            <option value="distribucion">DISTRIBUCION</option>
                            <option value="reposicion">REPOSICION</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="reportar-btn">Reportar Falla!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
/* Add this CSS to your stylesheet or within a <style> tag in the same file */
.form-group {
    margin-bottom: 15px;
}
</style>
{{/partial}}
{{> templates/base }}