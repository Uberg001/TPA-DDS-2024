    <div class="form-wrapper-ofrecer-productos">
        <div class="container4">
            <h2 class="section-title">Desperfecto en Heladera</h2>
            <div class="info">
                <p><strong>Nombre:</strong> {{incidente.heladera.nombre}}</p>
                <p><strong>Ubicación:</strong> {{incidente.heladera.direccion.localidad}}, {{incidente.heladera.direccion.calle}} {{incidente.heladera.direccion.numero}}</p>
                <p><strong>Estado desperfecto:</strong>
                    {{#if (eq incidente.estadoIncidente "SOLUCIONADO")}}
                        <span class="text-green">{{incidente.estadoIncidente}}</span>
                    {{else if (eq incidente.estadoIncidente "NO_SOLUCIONADO")}}
                        <span class="text-orange">{{incidente.estadoIncidente}}</span>
                    {{else}}
                        <span class="text-red">{{incidente.estadoIncidente}}</span>
                    {{/if}}

                </p>
            </div>
            <div class="info">
                <h3 class="section-title">Detalles del Desperfecto</h3>
                <p><strong>Fecha de Reporte:</strong> {{incidente.fecha}}</p>
                <p><strong>Tipo de Falla:</strong> {{incidente.tipoIncidente}}</p>
                <p><strong>Descripcion:</strong> {{incidente.descripcion}}</p>
            </div>
            <div class="actions">
                {{#if tecnico}}
                    {{#unless (eq incidente.estadoIncidente "SOLUCIONADO")}}
                        <button class="btn" onclick="location.href='/resolverFalla/{{incidente.id}}'">Resolver Desperfecto</button>
                    {{/unless}}
                {{else}}
                    <button class="btn">Contactar Técnico</button>
                {{/if}}
            </div>
            <div class="history">
                <h3 class="section-title">Historial de Visitas</h3>
                {{#if incidente.resolucion.length}}
                    <ul>
                        {{#each incidente.resolucion}}
                            <li>
                                <img src="{{foto_path}}" alt="Foto de la visita del {{fecha}}" class="history-image" onclick="showImageModal(this.src)">
                                <p><strong>Fecha:</strong> {{fecha}}</p>
                                <p><strong>Descripción:</strong> {{descripcion}}</p>
                                <p><strong>Visita realizada por:</strong> {{tecnico.nombre}}</p>
                                <p><strong>Estado Heladera luego de visita:</strong> {{estadoHeladera}}</p>
                            </li>
                        {{/each}}
                    </ul>
                {{else}}
                    <p>No hay visitas registradas.</p>
                {{/if}}
            </div>


            <!-- Modal para mostrar la imagen en grande -->
            <div id="imageModal" class="modal" onclick="closeImageModal()">
                <span class="close">&times;</span>
                <img id="modalImage" class="modal-content">
            </div>

        </div>
    </div>
    <script>
        function showImageModal(src) {
            const modal = document.getElementById('imageModal');
            const modalImage = document.getElementById('modalImage');
            modal.style.display = 'flex';
            modalImage.src = src;
        }

        function closeImageModal() {
            const modal = document.getElementById('imageModal');
            modal.style.display = 'none';
        }

    </script>
