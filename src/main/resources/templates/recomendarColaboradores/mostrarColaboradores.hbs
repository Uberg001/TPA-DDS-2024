{{#partial "contenido"}}
    <h1>Colaboradores Recomendados</h1>
    
    <!-- Estilos para la tabla -->
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
            text-align: left;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        tr:hover {
            background-color: #ddd;
        }
    </style>
    
    <!-- Tabla de colaboradores -->
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Número de Documento</th>
                <th>Tipo de Documento</th>
                <th>Medios de Contacto</th>
                <th>Puntos</th>
                <th>Donaciones</th>
            </tr>
        </thead>
        <tbody>
            {{#if colaboradores.length}}
                {{#each colaboradores}}
                <tr>
                    <td>{{this.nombre}}</td>
                    <td>{{this.apellido}}</td>
                    <td>{{this.nro_documento}}</td>
                    <td>{{this.tipo_documento}}</td>
                    <td>
                        <ul>
                            {{#each this.medios_de_contacto}}
                                <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </td>
                    <td>{{this.puntos}}</td>
                    <td>{{this.donaciones}}</td>
                </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="7">No se encontraron colaboradores</td>
                </tr>
            {{/if}}
        </tbody>
    </table>

    <!-- Imagenes -->
    <img src="/images/imagen-pagina-principal-sin-fondo.jpg" alt="Descripción de la imagen"
         class="pg-principal-imagen-full-width active">
    <img src="/images/logo-sin-fondo.png" alt="Logo" class="pg-principal-imagen-logo-esquina">

{{/partial}}
{{> templates/baseSinNav }}