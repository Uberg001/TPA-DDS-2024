<head>
    <link rel="stylesheet" type="text/css" href="/canjePuntosStyles.css">
</head>
{{#partial "contenido"}}
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }

        .container4 {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .user-info {
            text-align: center;
            margin-bottom: 20px;
        }

        .user-info p {
            margin: 5px 0;
            font-size: 16px;
        }

        .points {
            font-weight: bold;
            color: #4CAF50;
        }

        .products-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .product-card {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 15px;
        }

        .product-image {
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .product-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .product-description {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }

        .product-points {
            font-size: 16px;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 10px;
        }

        .btn.canjear-btn {
            padding: 8px 12px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

        .btn.canjear-btn.disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        .btn.canjear-btn:hover:not(.disabled) {
            background-color: #45a049;
        }

        .custom-alert-ok {
            position: fixed;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            background-color: #4CAF50;
            color: white;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

    </style>
<div class="rectangulo-puntos-personalizado" style="height: auto; max-height: 500px; overflow: auto;">
    <div class="stats-puntos-container">
        <div>
            <!-- Add this inside the <div class="productos-lista"> before the <ul> element -->
            <h3 id="puntos-usados">Tu Puntaje: {{puntaje}}</h3>
            <h2>Productos para Canjear</h2>
            <form action="/canje" method="POST">
                <div class="products-container">
                    <ul id="productos-lista" class="scrollable" style="list-style: none;">
                        {{#each ofertas}}
                            <li>
                                <div class="product-card">
                                    <img src="{{this.imagen}}" alt="imagen" class="product-image">
                                    <div style="display: flex; justify-content: center; gap: 20px;align-items: center;">
                                        <input type="checkbox" class="btn" style="margin: 0; padding: 0" id="producto_{{@index}}" name="producto_{{@index}}">
                                        <label for="producto_{{@index}}" style="margin: 0; padding: 0" class="product-title">{{this.nombre}}</label>
                                        <label for="producto_{{@index}}" style="margin: 0; padding: 0" class="points">{{this.puntosNecesarios}}</label>
                                        <input type="hidden" name="producto_puntos_{{@index}}" value="{{this.puntosNecesarios}}">
                                        <input type="hidden" name="producto_id_{{@index}}" value="{{this.id}}">
                                        <input type="hidden" name="puntosPersona" value="{{puntaje}}">
                                    </div>
                                </div>
                            </li>
                        {{/each}}
                        <input type="hidden" name="cantidadProductosTotales" value="{{cantidadProductosTotales}}">
                    </ul>
                </div>
                <button class="canjear-btn btn canjear-btn" onclick="showAlertOK('Producto canjeado exitosamente!')">Â¡Deseo canjearlos!</button>
            </form>
        </div>
    </div>
</div>
    <script>
        function showAlertOK(message) {
            const alertBox = document.createElement('div');
            alertBox.className = 'custom-alert-ok';
            alertBox.innerText = message;
            document.body.appendChild(alertBox);
            setTimeout(() => alertBox.remove(), 5000);
        }
    </script>

{{/partial}}
{{> templates/base }}