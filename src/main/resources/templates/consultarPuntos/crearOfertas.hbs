{{#partial "contenido"}}
    <div class="container" style="padding:20px; margin-left: 350px; margin-top: 300px;">
        <form action="/oferta" method="POST" enctype="multipart/form-data">
            <div class="form-group row">
            <label for="nombre" style="color: aliceblue; display: inline-block; width: 150px;">Nombre:</label>
            <input type="text" id="nombre" name="nombre" style="width: 300px;" required>
            </div>
            <div class="form-group row">
            <label for="puntosNecesarios" style="color: aliceblue; display: inline-block; width: 150px;">Puntos Necesarios:</label>
            <input type="text" id="puntosNecesarios" name="puntosNecesarios" style="width: 300px;" pattern="\d+(\.\d{1,2})?" required>
            </div>
            <div class="form-group row">
            <label for="imagen" style="color: aliceblue; display: inline-block; width: 150px;">Imagen:</label>
            <input type="file" id="imagen" name="imagen" style="width: 300px;" accept="image/*" required>
            </div>
            <div class="form-group row">
            <label for="rubro" style="color: aliceblue; display: inline-block; width: 150px;">Rubro:</label>
            <input type="text" id="rubro" name="rubro" style="width: 300px;" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <!-- Imagenes -->
