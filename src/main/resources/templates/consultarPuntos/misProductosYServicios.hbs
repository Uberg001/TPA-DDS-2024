{{#partial "contenido"}}
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }

        .container4 {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            text-align: center;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .user-info {
            text-align: center;
            margin-bottom: 20px;
        }

        .user-info p {
            margin: 5px 0;
            font-size: 16px;
        }

        .points {
            font-weight: bold;
            color: #4CAF50;
        }

        .products-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .product-card {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            padding: 15px;
        }

        .product-image {
            width: 100%;
            height: 150px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 10px;
        }

        .product-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .product-description {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }

        .product-points {
            font-size: 16px;
            font-weight: bold;
            color: #007bff;
            margin-bottom: 10px;
        }

        .btn.canjear-btn {
            padding: 8px 12px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }

        .btn.canjear-btn.disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        .btn.canjear-btn:hover:not(.disabled) {
            background-color: #45a049;
        }
    </style>
    <body>
    <div class="container4" style="margin-top: 120px;">
        <h2 class="section-title">Tus Productos/Servicios</h2>
        <div class="user-info">
            <p><strong>Â¡Hola, {{persona}}!</strong></p>
            <p>Estos son tus productos/servicios...</p>
        </div>
        <div class="products-container" style="display: flex; overflow: auto;">
            {{#each canjes}}
                <div class="product-card" style="min-width: 200px;">
                    <img src="{{this.ofertaARealizar.imagen}}" alt="imagen" class="product-image">
                    <h3 class="product-title">{{this.ofertaARealizar.nombre}}</h3>
                    <p class="product-description">Rubro: {{this.ofertaARealizar.rubro.nombre}}</p>
                    <p class="product-points">Costo: {{this.ofertaARealizar.puntosNecesarios}}</p>
                </div>
            {{/each}}
        </div>
    </div>
    </body>
{{/partial}}
{{> templates/base }}